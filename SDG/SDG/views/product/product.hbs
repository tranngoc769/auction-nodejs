<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				{{> home/sideBar}}
			</div>
			<div class="col-sm-9 padding-right">
				<div class="product-details">
					<div class="col-sm-5">
						<div class="view-product"><img src="../assets/photos/{{product.ImagePro}}" alt="image details">
							<h3>ZOOM</h3>
						</div>
						<div id="similar-product" class="carousel slide" data-ride="carousel">
							<div class="carousel-inner">
								<div class="item active"><a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar1.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar2.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar3.jpg" alt="image details"></a>
								</div>
								<div class="item"><a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar1.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar2.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar3.jpg" alt="image details"></a>
								</div>
								<div class="item"><a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar1.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar2.jpg" alt="image details"></a>
									<a href="https://www.free-css.com/free-css-templates"><img
											src="../assets/images/product-details/similar3.jpg" alt="image details"></a>
								</div>
							</div>
							<a class="left item-control" href="#similar-product" data-slide="prev"><i
									class="fa fa-angle-left"></i></a> <a class="right item-control"
								href="#similar-product" data-slide="next"><i class="fa fa-angle-right"></i></a>
						</div>
					</div>
					<div class="col-sm-7">
						<div class="product-information"><img src="../assets/images/new.png" class="newarrival"
								alt="image details">
							<h2>{{product.ProName}}</h2>
							<h3>{{cate.Catname}}</h3>
							<span> <span>{{product.sellNowPrice}}</span>

								<a href="/bidder/addwatchlist/{{product.ID}}" style="margin-bottom:20px"><button
										type="button" class="btn btn-fefault cart"> <i class="fa fa-shopping-cart"></i>
										Add to wish list</button></a>
							</span>
							<p><b>Current Price:</b> {{product.curPrice}}</p>
							<p><b>Sell Now:</b> {{product.sellNowPrice}}</p>
							<a><b>Public date:</b> {{product.pubDate}}</a><br />
							<a><b>End date:</b>{{product.endDate}}</a>
							<div class="blog-post">
								{{#if bidderCanBid}}
								<form action="/bidder/bid/{{product.ID}}" method="POST" onsubmit="return confirmBid();">
									<small class="form-text text-success">You are good to bid. Recommend price to bid:
										{{recommendPrice}}</small>
									<div class="form-inline row">
										<input type="munber" name="price" class="form-control" id="bidPriceInput"
											placeholder="Enter your price to bid">
										<button type="submit" class="btn btn-primary ml-5">BID NOW</button>
									</div>
								</form>
								{{else}}
								<p class="text-danger">You are not allow to bid, you must sign in and have 80% good
									review to bid or contact
									seller for permission</p>
								{{/if}}
							</div>
						</div>
					</div>
				</div>
				<div class="category-tab shop-details-tab">
					<div class="col-sm-12">
						<ul class="nav nav-tabs">
							<li class="active"><a href="#details" data-toggle="tab">Seller</a></li>
							<li><a href="#companyprofile" data-toggle="tab">Highest Bidder</a></li>
							<li><a href="#reviews" data-toggle="tab">Details</a></li>
							<li><a href="#history" data-toggle="tab">History</a></li>
						</ul>
					</div>
					<div class="tab-content">
						<div class="tab-pane fade active in" id="details">
							<div class="col-sm-12 my-5">



							</div>
						</div>
						<div class="tab-pane fade" id="companyprofile">
							<div class="col-sm-3">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center"><img
												src="../assets/images/home/gallery1.jpg" alt="image details">
											<h2>$56</h2>
											<p>Easy Polo Black Edition</p>
											<button type="button" class="btn btn-default add-to-cart"><i
													class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
							<div class="col-sm-3">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center"><img
												src="../assets/images/home/gallery3.jpg" alt="image details">
											<h2>$56</h2>
											<p>Easy Polo Black Edition</p>
											<button type="button" class="btn btn-default add-to-cart"><i
													class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
							<div class="col-sm-3">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center"><img
												src="../assets/images/home/gallery2.jpg" alt="image details">
											<h2>$56</h2>
											<p>Easy Polo Black Edition</p>
											<button type="button" class="btn btn-default add-to-cart"><i
													class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
							<div class="col-sm-3">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center"><img
												src="../assets/images/home/gallery4.jpg" alt="image details">
											<h2>$56</h2>
											<p>Easy Polo Black Edition</p>
											<button type="button" class="btn btn-default add-to-cart"><i
													class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="tab-pane fade" id="reviews">
							<div class="col-sm-12">
								<ul>
									<li><a href="https://www.free-css.com/free-css-templates"><i
												class="fa fa-user"></i>EUGEN</a></li>
									<li><a href="https://www.free-css.com/free-css-templates"><i
												class="fa fa-clock-o"></i>12:41 PM</a></li>
									<li><a href="https://www.free-css.com/free-css-templates"><i
												class="fa fa-calendar-o"></i>31 DEC 2014</a></li>
								</ul>
								<p>{{{product.Describle}}}</p>

							</div>
						</div>

						<div class="tab-pane fade" id="history">
							<div class="col-sm-12 my-5">
								<table class="table">
									<thead>
										<tr>
											<th scope="col">THỜI ĐIỂM</th>
											<th scope="col">NGƯỜI MUA</th>
											<th scope="col">GIÁ</th>
										</tr>
									</thead>
									<tbody>
										{{#each history}}
											<tr>
												<td>{{dateBid}}</td>
												<td>{{userName}}</td>
												<td>{{price}}</td>
											</tr>
										{{/each}}
									</tbody>
								</table>


							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>