<section id="cart_items">
  <div class="container">
    
    
    
    
    {{!-- SAN PHAM DANG DAU GIA --}}
    <div class="review-payment">
      <h2>Danh Sách Sản Phẩm Còn Hạn Đang Đấu Giá</h2>
    </div>
    <div class="table-responsive cart_info">
      <table class="table table-condensed">
        <thead>
          <tr class="cart_menu">
            <td scope="col" class="row image"></td>
            <td  scope="col" class="description">Thông Tin</td>
            <td  scope="col" class="price">Giá Hiện Tại</td>
            <td  scope="col" class="quantity">Người Ra Giá Cao Nhất</td>
            <td  scope="col" class="total">Tổng Lượt Ra Giá</td><td></td>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td  scope="col" class="cart_product"><a href="/seller/detail/{{ID}}"><img height="200px" width="200px" src="../assets/photos/{{ImagePro}}" alt=""></a></td>
            
            <td  scope="col" class="cart_description"><h4><a href="/seller/detail/{{ID}}">{{ProName}}</a><p></p>
            </h3><p>Ngày đăng : {{pubDate}}</p></h3><p>Ngày kết thúc : {{endDate}}</p></td>
            <td  scope="col" class="cart_price"><p>{{curPrice}}</p></td>
            <td  scope="col" class="cart_quantity">
                <h4><a href="#">{{fullName}}</a>
            </td>
            <td  scope="col" class="cart_total"><p class="cart_total_price">{{countBidder}}</p></td>
            <td  scope="col">
              <a href="/seller/myproduct/{{ID}}"><img height="32px" width="32px" src="../assets/images/document.png" alt="">
              </a></td>
          </tr>
            
          {{/each}}
        </tbody>
      </table>
    </div>
    {{!-- ------------------------------ --}}
     {{!-- SAN PHAM DA DAU GIA --}}
    <div class="review-payment">
      <h2>Danh Sách Sản Phẩm Đã Có Người Mua</h2>
    </div>
    <div class="table-responsive cart_info">
      <table class="table table-condensed">
        <thead>
          <tr class="cart_menu">
            <td scope="col" class="row image"></td>
            <td  scope="col" class="description">Thông Tin</td>
            <td  scope="col" class="price">Giá Hiện Tại</td>
            <td  scope="col" class="quantity">Người Ra Giá Cao Nhất</td>
            <td  scope="col" class="total">Tổng Lượt Ra Giá</td><td></td>
          </tr>
        </thead>
        <tbody>
          {{#each soldProducts}}
          <tr>
            <td  scope="col" class="cart_product"><a href="/seller/detail/{{ID}}"><img height="200px" width="200px" src="../assets/photos/{{ImagePro}}" alt=""></a></td>
            
            <td  scope="col" class="cart_description"><h4><a href="/seller/detail/{{ID}}">{{ProName}}</a><p></p>
            </h3><p>Ngày đăng : {{pubDate}}</p></h3><p>Ngày kết thúc : {{endDate}}</p></td>
            <td  scope="col" class="cart_price"><p>{{curPrice}}</p></td>
            <td  scope="col" class="cart_quantity">
                <h4><a href="/seller/bidder/{{HighestBidderID}}">{{fullName}}</a>
            </td>
            <td  scope="col" class="cart_total"><p class="cart_total_price">{{countBidder}}</p></td>
            <td  scope="col">
              <a href="/seller/myproduct/{{ID}}"><img height="32px" width="32px" src="../assets/images/document.png" alt="">
              </a></td>
          </tr>
            
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>