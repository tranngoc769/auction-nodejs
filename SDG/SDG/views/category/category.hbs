<div class="container">
    <div class="row">
        <div class="col-sm-3">
            {{> home/sideBar}}
        </div>
        <div class="col-sm-9 padding-right">
            <div class="recommended_items">
                <h2 class="title text-center">{{catDetail.Catname}}</h2> {{#each list}}
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="../../assets/images/9.png" alt="website template image">
                                <h4>{{ProName}}</h4>
                                <h5> {{sellNowPrice}}</h5>
                                <p>Sell Now</p>
                                {{#if isLogin}}
                                <a href="#" style="background: #fb8c00; color:#fff" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart auction</a> {{else}}
                                <a href="/login" style="background: #fb8c00; color:#fff" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to auction</a> {{/if}}
                            </div>
                            <div class="product-overlay">
                                <div class="overlay-content">
                                   <a href="/product/{{ID}}" >
                  <h4 style="color: #f9a825;">{{ProName}}</h4><h5 style="color: #f9a825;"> {{sellNowPrice}}</h5>
                  <p style="color: #f9a825;">Sell Now</p>
                    </a>
                                    {{#if isLogin}}
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to auction</a> {{else}}
                                    <a href="/login" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to auction</a> {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="choose">
                            <ul class="nav nav-pills nav-justified">
                                <li><a href="/login"><i class="fa fa-plus-square"></i>Bid Now</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{>home/paging}}
        </div>
    </div>
</div>